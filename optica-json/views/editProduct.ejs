<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head') %>  

<body>

    <div class=container>

        <%- include('partials/header') %>   
        <main>
            <div class="producto-container">
                <h2>Editar Producto</h2>
                
                    <form action="/products/edit/<%= producto.id %>?_method=PUT" method="post">
                    <label for="img1">Imagen de Portada</label><br>
                    <input type="text" name="img1" id="img1" value="<%= producto.img1 %>"><br>
                    <label for="img2">Imagen 2</label><br>
                    <input type="text" name="img2" id="img2" value="<%= producto.img2 %>"><br>
                    <label for="img3">Imagen 3</label><br>
                    <input type="text" name="img3" id="img3" value="<%= producto.img3 %>"><br>

                   

                    <label for="nombre">Nombre</label><br>
                    <input type="text" name="name" id="nane" value="<%= producto.name %>"><br>
                    <label for="descripcion">Descripcion</label><br>
                    <input type="text" name="description" id="description" value="<%= producto.description %>"><br>
                    <label for="categoria">Categoria</label><br>
                    <input type="text" name="category" id="category" value="<%= producto.category %>"><br>
                    <label for="precio">Precio</label><br>
                    <input type="number" name="price" id="price" value="<%= producto.price %>"><br>
                    <label for="color">Colores</label><br>
                    <input type="text" name="colors" id="colors" value="<%= producto.color %>"><br>
                    <br>
                    <button class="btn btn-dark" type="submit">Editar producto</button>
                </form>
            </div>

    <%- include('partials/footer') %>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>

</html>